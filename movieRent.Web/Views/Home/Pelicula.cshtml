@{
    ViewData["Title"] = "Administrador de Peliculas";
}

<div class="" style="margin-top: 20px">

    <h3>@ViewData["Title"]</h3>

    <form>
        <div class="form-group">
            <label for="formGroupExampleInput">Codigo: @ViewData["date"]</label>            
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Nombre</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Nombre">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Genero</label>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Genero">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Productora</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Productora">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Año Estreno</label>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Año Estreno">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Descripcion</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Descripcion">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Estado</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                <label class="form-check-label" for="exampleRadios1">
                    Activa
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                <label class="form-check-label" for="exampleRadios2">
                    Obsoleta
                </label>
            </div>
        </div>
        

        <button type="button" class="btn btn-primary btn-lg">Crear</button>
        <button type="button" class="btn btn-secondary btn-lg">Cancelar</button>

    </form>



</div>
